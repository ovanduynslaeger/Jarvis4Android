<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mediacenter_navigation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.automation.jarvis.MediacenterNavigationActivity">


<ImageButton
    android:id="@+id/fastUp"
    android:src="@drawable/ic_vertical_align_top_black_24dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/control_circle"
    android:layout_gravity="center_horizontal"
    android:onClick="mediaCenterClick"
    android:tag="FAST_UP"

    />
<Space
    android:layout_width="match_parent"
    android:layout_height="5dp" />
<ImageButton
    android:id="@+id/up"
    android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/control_circle"
    android:layout_gravity="center_horizontal"
    android:onClick="mediaCenterClick"
    android:tag="UP"
    />

<Space
    android:layout_width="match_parent"
    android:layout_height="5dp" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"
    >
    <ImageButton
        android:id="@+id/left"
        android:src="@drawable/ic_navigate_before_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/control_circle"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:onClick="mediaCenterClick"
        android:tag="LEFT"

        />
    <ImageButton
        android:id="@+id/valid"
        android:src="@drawable/ic_done_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/control_circle"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:onClick="mediaCenterClick"
        android:tag="VALID"

        />
    <ImageButton
        android:id="@+id/righ"
        android:src="@drawable/ic_navigate_next_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/control_circle"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:onClick="mediaCenterClick"
        android:tag="RIGHT"

        />
</LinearLayout>

<Space
    android:layout_width="match_parent"
    android:layout_height="5dp" />
<ImageButton
    android:id="@+id/down"
    android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/control_circle"
    android:onClick="mediaCenterClick"
    android:tag="DOWN"

    />
<Space
    android:layout_width="match_parent"
    android:layout_height="5dp" />
<ImageButton
    android:id="@+id/fastDown"
    android:src="@drawable/ic_vertical_align_bottom_black_24dp"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/control_circle"
    android:onClick="mediaCenterClick"
    android:tag="FAST_DOWN"

    />

<Space
    android:layout_width="match_parent"
    android:layout_height="20dp" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"
    >

    <ImageButton
        android:id="@+id/back"
        android:src="@drawable/ic_reply_black_24dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_height="wrap_content"
        android:background="@drawable/control_circle"
        android:layout_gravity="center_horizontal"
        android:onClick="mediaCenterClick"
        android:tag="BACK"

        />

    <ImageButton
        android:id="@+id/home"
        android:src="@drawable/ic_home_black_24dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_columnWeight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/control_circle"
        android:layout_gravity="center_horizontal"
        android:onClick="mediaCenterClick"
        android:tag="HOME"
        />

    <ImageButton
        android:id="@+id/contextMenu"
        android:src="@drawable/ic_menu_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/control_circle"
        android:layout_gravity="center_horizontal"
        android:onClick="mediaCenterClick"
        android:tag="CONTEXT_MENU"
        />

    <ImageButton
        android:id="@+id/info"
        android:src="@drawable/ic_info_outline_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/control_circle"
        android:layout_gravity="center_horizontal"
        android:onClick="mediaCenterClick"
        android:tag="INFO"

        />
</LinearLayout>

</LinearLayout>