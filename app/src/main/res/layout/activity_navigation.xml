<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/header"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <ImageButton
        android:id="@+id/fastUp"
        android:src="@drawable/ic_vertical_align_top_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/control_circle"
        android:layout_gravity="center_horizontal"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <ImageButton
        android:id="@+id/up"
        android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/control_circle"
        android:layout_gravity="center_horizontal"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <ImageButton
            android:id="@+id/left"
            android:src="@drawable/ic_navigate_before_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/control_circle"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            />
        <ImageButton
            android:id="@+id/valid"
            android:src="@drawable/ic_done_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/control_circle"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            />
        <ImageButton
            android:id="@+id/righ"
            android:src="@drawable/ic_navigate_next_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/control_circle"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <ImageButton
        android:id="@+id/down"
        android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/control_circle"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <ImageButton
        android:id="@+id/fastDown"
        android:src="@drawable/ic_vertical_align_bottom_black_24dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/control_circle"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >

    <ImageButton
        android:id="@+id/back"
        android:src="@drawable/ic_reply_black_24dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_height="wrap_content"
        android:background="@drawable/control_circle"
        android:layout_gravity="center_horizontal"
        />

    <ImageButton
        android:id="@+id/home"
        android:src="@drawable/ic_home_black_24dp"
        android:layout_width="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_columnWeight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/control_circle"
        android:layout_gravity="center_horizontal"
        />

    <ImageButton
        android:id="@+id/contextMenu"
        android:src="@drawable/ic_menu_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/control_circle"
        android:layout_gravity="center_horizontal"
        />

    <ImageButton
        android:id="@+id/contextInfo"
        android:src="@drawable/ic_info_outline_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/control_circle"
        android:layout_gravity="center_horizontal"
        />
        </LinearLayout>

</LinearLayout>